<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recbg"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/image_view"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/name"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uid"
            android:layout_marginTop="5dp"
            android:text="UHID 1273617"
            android:textColor="@color/md_black_1000"
            android:id="@+id/uhid"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/uid"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"
            android:text="Invoice Number"
            android:id="@+id/uhids"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uhid"
            android:id="@+id/invoname"
            android:text="John Smith"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invoname"
            android:layout_marginTop="5dp"
            android:text="12/07/2019"
            android:textColor="@color/md_black_1000"
            android:id="@+id/reportdate"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/invoname"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"
            android:text="Amount - 2500/-"
            android:id="@+id/reportdates"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportdate"
            android:layout_marginTop="5dp"
            android:text="Invoice Type :"
            android:textColor="@color/md_black_1000"
            android:id="@+id/reportaction"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/reportdate"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"
            android:text="Normal Invoice"
            android:id="@+id/invoicetyp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportaction"
            android:layout_marginTop="5dp"
            android:text="Description :"
            android:textColor="@color/md_black_1000"
            android:id="@+id/reportdesc"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/reportaction"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"
            android:text="Description Will shown here"
            android:id="@+id/reportdescs"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_below="@+id/reportdescs"
            android:background="@color/md_green_800"
            android:text="Download Invoice"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/status"
            android:layout_marginTop="15dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/status"
            />
    </RelativeLayout>

</FrameLayout>
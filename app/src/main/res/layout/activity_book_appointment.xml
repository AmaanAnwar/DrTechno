<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookAppointment"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/logo"
                android:id="@+id/sepr"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:text="Book Appointment"
                android:layout_below="@+id/sepr"
                android:layout_marginTop="10dp"
                android:textColor="@color/md_black_1000"
               android:id="@+id/Book"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Description for this tab will show here"
                android:layout_below="@+id/Book"
                android:layout_marginTop="5dp"
                android:id="@+id/descbook"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/descbook"
                android:id="@+id/sepr2"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/names"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="16dp"
                android:text="Adam Smith"
               android:layout_alignParentRight="true"
                android:textColor="@color/md_black_1000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/uids"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uid"
                android:textSize="16dp"
                android:text="UID 12983"
                android:layout_marginLeft="20dp"
                android:textColor="@color/md_black_1000"
                android:layout_below="@+id/name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/genders"
                android:layout_below="@+id/uid"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/gender"
                android:textSize="16dp"
                android:text="Male"
                android:layout_marginLeft="20dp"
                android:textColor="@color/md_black_1000"
                android:layout_below="@+id/uid"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/emails"
                android:layout_below="@+id/gender"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/email"
                android:textSize="16dp"
                android:text="abcd@12345.com"
                android:layout_marginLeft="20dp"
                android:textColor="@color/md_black_1000"
                android:layout_below="@+id/gender"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/phones"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/phone"
                android:textSize="16dp"
                android:text="7833782161"
                android:layout_marginLeft="20dp"
                android:textColor="@color/md_black_1000"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/phone"
                android:background="@color/md_grey_300"
                android:layout_marginTop="5dp"
                android:id="@+id/seppp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment Date :"
                android:textColor="@color/md_grey_800"
                android:layout_below="@+id/seppp"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Dates"
                android:textSize="16dp"
                android:text="01/01/2019"
                android:layout_marginLeft="20dp"
                android:textColor="@color/md_black_1000"
                android:layout_below="@+id/seppp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/pickdate"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/seppp"
                android:background="@drawable/butncircbg"
                android:text="Pick Date"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:id="@+id/pickdate"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/Doctor"
                android:layout_below="@+id/pickdate"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:id="@+id/Doctors"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/pickdate"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_alignParentRight="true"
                android:layout_height="3dp"
                android:layout_below="@+id/Doctors"
                android:background="@color/md_blue_300"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message :"
                android:textColor="@color/md_grey_800"
                android:textSize="15dp"
                android:id="@+id/message"
                android:layout_below="@+id/Doctor"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message"
                android:hint="Enter Your Message here"
                android:textSize="15dp"
                android:id="@+id/messagearea"
                android:gravity="bottom"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_below="@+id/messagearea"
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bookappointbtn"
                android:text="Book Appointment"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
        </RelativeLayout>


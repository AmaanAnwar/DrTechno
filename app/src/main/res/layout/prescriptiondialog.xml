<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prescription"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:background="@color/md_teal_500"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/butncircbg"
            android:layout_centerHorizontal="true"
            android:text="Current Prescription"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:id="@+id/current"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/butncircbg"
            android:layout_centerHorizontal="true"
            android:text="Previous prescription"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:id="@+id/prevp"
            android:layout_below="@+id/current"
            android:layout_marginTop="22dp"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/butncircbg"
            android:layout_centerHorizontal="true"
            android:text="Visit History"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:id="@+id/visits"
            android:layout_below="@+id/prevp"
            android:layout_marginTop="22dp"
            />
    </RelativeLayout>
</LinearLayout>
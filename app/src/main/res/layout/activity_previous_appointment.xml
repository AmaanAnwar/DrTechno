<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviousAppointment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/rr"
            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:id="@+id/logo"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/logo"
                android:id="@+id/sepr"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:text="Previous Appointment"
                android:layout_below="@+id/sepr"
                android:layout_marginTop="10dp"
                android:textColor="@color/md_black_1000"
                android:id="@+id/Book"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Description for this tab will show here"
                android:layout_below="@+id/Book"
                android:layout_marginTop="5dp"
                android:id="@+id/descbook"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/descbook"
                android:id="@+id/sepr2"
                android:layout_marginTop="5dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_below="@+id/sepr2"
                android:background="@color/md_grey_300"
                android:layout_marginTop="10dp"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/previousAppoint"
                    android:layout_marginRight="10dp"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
